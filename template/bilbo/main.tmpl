{{ define "bilbo/main.tmpl" }}
{{ template "head.tmpl" .}}

 <body>

        <div class="container" style="font-family: 'Sans-Regular';">
            <div  class="custom">
                <form action="/queryJenkins" method="POST">  
                    <h2>Jenkins Masters for {{ .project }} </h2>
                    <div class="form-group">
                        {{range .payloadbilbohealth}}
                          <li>  <a href="https://{{.Name| convertFileJSONResp}}.dre.dice.se">{{ .Name | convertFileJSONResp }}<img height="90px"></a>  </li>
                        {{end}}
                    </div>
                    <h2>Perforce branches for {{ .project }} </h2>
                    <div class="form-group">
                        {{range .payloadbranch}}
                            <li class="list-group-item list-group-item-light">{{ .Name | convertFileJSONResp }}</li>
                        {{end}}
                    </div>
                </form>
            </div>
        </div>
    </body>

{{ template "foot.html" .}}
{{ end }}